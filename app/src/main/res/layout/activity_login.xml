<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="#fff">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:textColor="#14BED3"
            android:fontFamily="@font/autour_one"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Come To Life, Come To Heal"
            android:textAlignment="center"
            android:textColor="#00efc8"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:fontFamily="@font/baloo"
            android:layout_below="@+id/txt1"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:id="@+id/txtname"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt3"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:text="Login"
            android:textColor="#0C6664"
            android:fontFamily="@font/baloo"
            android:textSize="28dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imagelogin"
            android:layout_width="164dp"
            android:layout_height="149dp"
            android:layout_below="@+id/txtname"
            android:layout_centerHorizontal="true"
            app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_goeb1fbr.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:padding="2dp" />

        <EditText
            android:layout_width="320dp"
            android:fontFamily="@font/amiko_semibold"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="viewStart"

            android:textColor="#000"
            android:textColorHint="#A5A8A3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imagelogin"
            android:hint="E-Mail ID"

            android:inputType="textEmailAddress"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_corners"
            android:textSize="22dp"
            android:id="@+id/edtmobile"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textColorHint="#A5A8A3"
            android:textColor="#000"
            android:layout_below="@+id/edtmobile"
            android:hint="Password"
            android:fontFamily="@font/amiko_semibold"
            android:inputType="textPassword"
            android:layout_marginTop="20sp"
            android:textSize="22dp"
            android:background="@drawable/rounded_corners"
            android:id="@+id/edtpassword"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:text="Login"
            android:fontFamily="@font/baloo"
            android:layout_below="@+id/edtpassword"
            android:layout_marginTop="40dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:id="@+id/btnlogin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlogin"
            android:textColor="#0C6664"
            android:text="New User? Register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/baloo"
            android:id="@+id/txtNewuser"/>

    </RelativeLayout>



</RelativeLayout>